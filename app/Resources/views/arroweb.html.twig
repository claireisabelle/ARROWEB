<!DOCTYPE html>
<html lang="fr">
    <head>

        <!-- Block Title -->
        <title>Arroweb - {% block title %}{% endblock %}</title>
        
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous" />

        <!-- CSS Customisé -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Kalam" rel="stylesheet">

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}" />

        <!-- Font Awesome -->
        <script src="https://use.fontawesome.com/7798b6d3d8.js"></script>

        <!-- ScrollReveal -->
        <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
        <script>
         window.sr = ScrollReveal();
        </script>
       
    </head>
    <body>

        <div class="container-fluid">

            <!-- Nav Menu-->
            <nav class="navbar navbar-toggleable-md fixed-top navbar-inverse fond-bleu">
              <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              </button>
              
              <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('img/logo-blanc-2.png') }}" alt="Arroweb, conception de site Internet" title="" /></a>

              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <div class="container">
                  <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link {% if app.request.get('_route') == 'homepage' %} active {% endif %}" href="{{ path('homepage') }}">Accueil</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle {% if app.request.get('_route')  starts with 'prestation' %} active {% endif %}" href="{{ path('prestation_site_mesure') }}" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Prestations
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="{{ path('prestation_site_mesure') }}">Site Internet sur Mesure</a>
                    <a class="dropdown-item" href="{{ path('prestation_site_wordpress') }}">Site Wordpress</a>
                    <a class="dropdown-item" href="{{ path('prestation_refonte_site') }}">Refonte Web</a>
                    <a class="dropdown-item" href="{{ path('prestation_maintenance') }}">Maintenance &amp; Actualisation</a>
                    <a class="dropdown-item" href="{{ path('prestation_integration') }}">Intégration Web</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('prestation_sport') }}">Web &amp; Sport</a>
                  </div>
                </li>
                <li class="nav-item">
                  <a class="nav-link {% if app.request.get('_route') == 'portfolio' %} active {% endif %}" href="{{ path('portfolio') }}">Portfolio</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link {% if app.request.get('_route') == 'questions' %} active {% endif %}" href="{{ path('questions') }}">Questions</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link {% if app.request.get('_route') == 'about' %} active {% endif %}" href="{{ path('about') }}">A propos</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link {% if app.request.get('_route') == 'contact' %} active {% endif %}" href="{{ path('contact') }}">Contact</a>
                </li>
              </ul><!-- /.ul -->
            </div><!-- /.container -->
          </div><!-- /.collapse navbar-collapse -->
        </nav><!-- /.nav -->

        
        {% block bandeau1 %}{% endblock %}
        

        <div class="container-fluid bandeau2">
            <div class="container">
                {% block bandeau2 %} {% endblock %}
            </div><!-- /.container -->
        </div> <!-- /.container-fluid bandeau2 -->
         
         

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-4">
                        <ul>
                            <li><a href="{{ path('homepage') }}">Accueil</a></li>
                            <li><a href="{{ path('portfolio') }}">Portfolio</a></li>
                            <li><a href="{{ path('questions') }}">Questions</a></li>
                            <li><a href="{{ path('about') }}">A propos</a></li>
                            <li><a href="{{ path('contact') }}">Contact</a></li>
                            <li><a href="{{ path('mentions') }}">Mentions légales</a></li>
                        </ul>
                    </div><!-- /.col -->
                    <div class="col-12 col-md-4">
                        <ul>
                            <li><a href="{{ path('prestation_site_mesure') }}">Site Internet sur mesure</a></li>
                            <li><a href="{{ path('prestation_site_wordpress') }}">Site Internet Wordpress</a></li>
                            <li><a href="{{ path('prestation_refonte_site') }}">Refonte web</a></li>
                            <li><a href="{{ path('prestation_maintenance') }}">Maintenance et actualisation</a></li>
                            <li><a href="{{ path('prestation_integration') }}">Intégration web</a></li>
                            <li><a href="{{ path('prestation_sport') }}">Web et Sport</a></li>
                        </ul>
                    </div><!-- /.col -->
                    <div class="col-12 col-md-4">
                        <p class="text-center"><img src="{{ asset('img/logo-blanc.png') }}" alt="" title="" /><br />
                        Conception de site Internet<br />
                        Accompagnement &amp; développement<br />
                        Caen - Normandie<br />
                        <em>SIREN n°513 932 137</em></p>
                        <p class="text-center">
                        <a href="https://www.facebook.com/arrowebCaen/" target="_blank"><i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i></a>
                        <a href="https://twitter.com/clairebourdale" target="_blank"><i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i></a>
                        <a href="https://www.arrosport.com" target="_blank"><i class="fa fa-external-link-square fa-2x" aria-hidden="true"></i></a>

                        </p>
                    </div><!-- /.col -->
                </div><!-- ./row -->
            </div><!-- /.container -->
        </footer><!-- /.footer -->
        
      </div><!-- /.container-fluid -->


       
        {% block javascripts %}{% endblock %}

        <!-- jQuery first, then Tether, then Bootstrap JS. -->
        <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
        

        <script>
            sr.reveal('.element-gauche',{
                duration: 1500,
                origin: 'left',
                distance: '300px',
                viewFactor: 0.2
            });

        </script>
    </body>
</html>